# Airtable — Lead management
AIRTABLE_API_KEY=pat_xxxxx
AIRTABLE_BASE_ID=appxxxxx
AIRTABLE_TABLE_ID=tblxxxxx

# Resend — Email verification
RESEND_API_KEY=re_xxxxx

# Base URL — Used for verification email links
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ─── Forum: Database (Phase 1) ─────────────────────────────
# Local: postgresql://postgres:postgres@localhost:5432/bharatvarsh
# Cloud Run: postgresql://user:pass@localhost/dbname?host=/cloudsql/PROJECT:REGION:INSTANCE
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bharatvarsh

# ─── Forum: Authentication (Phase 2) ───────────────────────
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-here
NEXTAUTH_URL=http://localhost:3000

# Google OAuth (optional — magic-link email auth works without these)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ─── Forum: AI Moderation (Phase 5) ────────────────────────
VERTEX_AI_PROJECT=your-gcp-project-id
VERTEX_AI_LOCATION=us-central1

# ─── Forum: Feature Flags (Phase 6) ────────────────────────
NEXT_PUBLIC_FORUM_ENABLED=true
NEXT_PUBLIC_AI_MODERATION_ENABLED=true
NEXT_PUBLIC_RATE_LIMIT_ENABLED=true

# ─── Forum: Database Pooling (Phase 7) ─────────────────────
# Max connections per Cloud Run instance (default: 20)
DATABASE_POOL_SIZE=20
# Connection acquisition timeout in seconds (default: 10)
DATABASE_POOL_TIMEOUT=10
# Direct URL bypasses PgBouncer for migrations (optional)
DIRECT_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bharatvarsh
